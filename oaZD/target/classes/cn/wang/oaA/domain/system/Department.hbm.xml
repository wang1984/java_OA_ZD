<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.wang.oaA.domain.system.Department">
		<id name="did" length="5">
			<generator class="increment"></generator>
		</id>
		<property name="name" length="20"></property>
		<property name="description" length="20"></property>
		<!-- inverse="true" 表示不维护关系 -->
		<set name="users" inverse="true">
			<key>
				<column name="did"></column>
			</key>
			<one-to-many class="cn.wang.oaA.domain.system.User"/>
		</set>
	</class>
</hibernate-mapping>
